name: Check product prices

on:
  schedule:
    - cron: "0 8,20 * * *"  # codziennie o 8:00 i 20:00 UTC
  workflow_dispatch:        # pozwala uruchomić ręcznie

jobs:
  check_prices:
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ Pobranie repozytorium
      - name: Checkout repo
        uses: actions/checkout@v3

      # 2️⃣ Ustawienie Pythona
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      # 3️⃣ Instalacja zależności
      - name: Install dependencies
        run: pip install -r requirements.txt

      # 4️⃣ Uruchomienie skryptu Pythona
      - name: Run script
        run: python scripts/check_prices.py

      # 5️⃣ Commit i push danych
      - name: Commit updated data
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add data/produkty.json
          git commit -m "Auto update product data" || echo "No changes" || true
          git push https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git || true
